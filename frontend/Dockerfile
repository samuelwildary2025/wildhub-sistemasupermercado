FROM node:18-alpine AS build

WORKDIR /app

# Recebe a variÃ¡vel do ambiente (vinda do EasyPanel)
ARG VITE_API_BASE_URL
ENV VITE_API_BASE_URL=${VITE_API_BASE_URL}

# Copiar pacotes e instalar dependÃªncias
COPY package*.json ./
RUN npm ci

# Copiar cÃ³digo-fonte
COPY . .

# Garante que a variÃ¡vel entre no build do Vite
RUN echo "VITE_API_BASE_URL=${VITE_API_BASE_URL}" > .env

# Compila o app com HTTPS correto
RUN npm run build

# ================================
# ðŸš€ Production Stage (Nginx)
# ================================
FROM nginx:alpine

# Copiar build
COPY --from=build /app/dist /usr/share/nginx/html

# Copiar configuraÃ§Ã£o customizada
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
